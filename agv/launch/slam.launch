<launch>
  <!-- pointcloud_to_laserscan_node -->
  <node name="pointcloud_to_laserscan_node" pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" output="screen">
    <remap from="cloud_in" to="sensors/lidar/lidar1/point_cloud"/>
    <remap from="scan" to="/scan"/>
    <param name="angle_min" value="-3.14159265359"/>
    <param name="angle_max" value="3.14159265359"/>
    <param name="range_min" value="0.3"/>
    <param name="range_max" value="50"/>

    <param name="angle_increment" value="0.0033"/> 
    <param name="min_height" value="-1.8"/>
    <param name="max_height" value="0.5"/>
  </node>

  <!-- ekf_localization_node -->
  <node name="ekf_localization_node" pkg="robot_localization" type="ekf_localization_node" output="screen">
      <param name="frequency" value="20"/>

    <param name="odom_frame" value="odom"/>
    <param name="base_link_frame" value="base_link"/>
    <param name="world_frame" value="odom"/>
    <param name="two_d_mode" value="true"/>

    <param name="odom0" value="sensors/odometry"/>
    <rosparam param="odom0_config">
      [false, false, false,
       false, false, false,
       true, true, false,
       false, false, false,
       false, false, false]
    </rosparam>
    
    <param name="imu0" value="sensors/imu/imu1"/>
    <rosparam param="imu0_config">
      [false, false, false,
       false, false, true,
       false, false, false,
       false, false,  false,
       false, false, false]
    </rosparam>
  </node>

  <!-- slam_gmapping-->
  <node name="gmapping" pkg="gmapping" type="slam_gmapping" output="screen">
    <param name="minimumScore" value="0.0"/>
    <param name="map_update_interval" value="0.1"/>

    <param name="srr" value="0.0"/>
    <param name="srt" value="0.0"/>
    <param name="str" value="0.0"/>
    <param name="stt" value="0.0"/>

    <!-- <param name="resampleThreshold" value="1.0"/> -->

    <param name="linearUpdate" value="0.5"/>
    <param name="angularUpdate" value="0.2"/>

    <param name="particles" value="50"/>
    <param name="transform_publish_period" value="0.05"/>
    <param name="max_range" value="100"/>
  </node>
</launch>